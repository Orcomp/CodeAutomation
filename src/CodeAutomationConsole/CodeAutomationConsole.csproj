<Project Sdk="MSBuild.Sdk.Extras">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <SelfContained>true</SelfContained>
    <PublishReadyToRun>true</PublishReadyToRun>
    <AssemblyName>CodeAutomationConsole</AssemblyName>
    <RootNamespace>CodeAutomationConsole</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <StartupObject />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Orc.CommandLine" Version="4.1.1" />
    <PackageReference Include="Orc.Csv" Version="4.3.2" />
    <PackageReference Include="Spectre.Console" Version="0.41.0" />
    <PackageReference Include="YamlDotNet" Version="11.2.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
  <ItemGroup>
    <None Remove="Resources\.manifest" />
    <None Remove="Resources\global.json" />
    <None Remove="Resources\Resources\Icons\Logo.ico" />
    <None Remove="Resources\Themes\Generic.xaml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\.manifest" />
    <EmbeddedResource Include="Resources\global.json" />
    <EmbeddedResource Include="Resources\Resources\Icons\Logo.ico" />
    <EmbeddedResource Include="Resources\Themes\Generic.xaml" />
  </ItemGroup>
</Project>
